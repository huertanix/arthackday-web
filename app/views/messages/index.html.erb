		<div class="two-third column">
			<div class="section-header">
				send us a message
			</div>
			<% if @message.errors.any? %>
		    <div id="error-explanation">
		      <h2><%= pluralize(@message.errors.count, "error") %> stopped this message from being sent:</h2>
		      <ul>
		      <% @message.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
			<%= form_for @message do |f| %>
				<%= f.text_field :email, :placeholder => "Email Address", :class => "contact-input" %>
				<%= f.text_field :subject, :placeholder => "Subject", :class => "contact-input" %>
				<%= f.text_area :body, :placeholder => "Your Message..." %>
				<%= f.submit "SEND", :class => "contact-submit" %>
			<% end %>
		</div>
	</div>
