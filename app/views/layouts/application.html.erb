	<body>
		<div class="section animated nav" id="nav-main">
			<% flash.each do |name, msg| -%>
      	<%= content_tag :div, msg, class: name %>
    	<% end -%>
			<% # This block is why Ruby sometimes blows ~ .dh %>
			<% unless @event.nil? %>
				<% #@event.inspect # Run this in a project edit page, shit bricks. %>
				<% if @event.attributes.has_key? 'header_dark_font' %>
					<% if @event.header_dark_font === true %>
						<% show_dark_text = true %>
					<% end %>
				<% end %>
			<% end %>
			<% unless @events.nil? %>
				<% if @events.first.attributes.has_key? 'header_dark_font' %>
					<% if @events.first.header_dark_font === true %>
						<% show_dark_text = true %>
					<% end %>
				<% end %>
			<% end %>
			<% if params[:controller] === "projects" || params[:controller] === "organizers" %>
				<% show_dark_text = true %>
			<% end %>
			<div class="nav-left">
				<% if show_dark_text %>
				<a href="/"><img src="/img/ahd_assets/ahd_logo_black.svg" id="black-logo"/></a>
				<% else %>
				<a href="/"><img src="/img/ahd_assets/ahd_logo_white.svg" id="white-logo"/></a>
				<% end %>
			</div>
			<div class="nav-right <%= (show_dark_text === true ? 'dark':'') %>">
				<% if params[:controller] == "about" %>
					<ul class="about">
				<% elsif params[:controller] == "events" %>
					<ul class="events">
				<% elsif params[:controller] == "contact" %>
					<ul class="contact">
				<% else %>
					<ul>
				<% end %>
					<li class="about">
						<a href="/about">About</a>
					</li>
					<!--<li class="events"><a href="/events">Events</a></li>-->
					<li class="contact">
						<a href="/contact" style="<%= (show_dark_text === true ? 'color:#000;':'') %>">Contact</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="section nav invisible animated" id="nav-drop">
			<div class="nav-left">
				<div class="back-to-top"><a href="/"><img src="/img/ahd_assets/AHD_Logo_Horizontal-White.svg" alt="back up"/></a></div>
			</div>
			<div class="nav-right">
				<% if params[:controller] == "about" %>
