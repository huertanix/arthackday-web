<div class="space"></div>
<div class="section" id="events-page">
	<div class="container">
		<ul id="events" class="sixteen columns">
		  <% @events.each do |event| %>
		    <%= link_to(event) do %>
		      <li <%= event.upcoming? ? 'class=upcoming' : nil %>>
		      	<div class="left-event"><%= event.theme%></div>
		      	<div class="right-event">
		      		<div class="event-page"><%= event.city.upcase %></div>
		      		<div class="event-page-time"><%= event.hackathon_start.strftime('%Y') %></div>
		      	</div>
		      </li>
		    <% end %>
		  <% end %>
		</ul>
	</div>
</div>

<% if organizer_signed_in? %>
  <div class="section">
    <div class="container">
      <div class="sixteen columns">
    	  <%= link_to 'New Event', new_event_path, class: 'admin-button' %>
  	  </div>
  	</div>
  </div>
<% end %>