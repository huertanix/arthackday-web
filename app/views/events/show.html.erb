<div class="section" id="header" style="background: #000 url(<%= @event.header_image %>);">
  <div class="container">
    <div class="event-callout sixteen columns">
      <div id="hero"><%= @event.theme %></div>
    </div>
  </div>
  <% unless @event.header_image_artist.blank? %>
    <div id="header-credit">
      <a href="<%= @event.header_image_artist_website %>">IMAGERY BY: <%= @event.header_image_artist %></a>
    </div>
  <% end %>
</div>

<div class="section" id="event-about">
  <div class="container">
    <div class="sixteen columns">
      <div class="section-header">show information</div>
      <h2>
        <%= @event.city.upcase + ' _ ' + @event.hackathon_start.strftime('%Y')%>
        <br/>
        <%=@event.theme %>
      </h2>
    </div>
    <div class="about-event-section two-thirds column">
      <div>
        HACKING BEGINS
        <br/>
        <%= @event.hackathon_start.strftime('%A, %b %e, %Y %l:%M %p') %>
        <br/>
        <br/>
        CLOSING EXHIBIT &amp; PARTY (OPEN TO THE PUBLIC)
        <br/>
        <%= @event.hackathon_end.strftime('%A, %b %e, %Y %l:%M %p') %>
      </div>
      <p>
        <%= @event.about %>
      </p>
    </div>
    <% if @event.upcoming? %>
      <div class="about-event-right one-third column">
        <div class="border-container">
          <div class="pre-about">
            <div>
              <p>Join the Art Hack Day teams on Saturday April 13 starting at 6:00pm for a closing exhibition, live performances, and party.</p>
              <a href="<%= @event.show_rsvp_url%>"><button >RSVP</button></a>
            </div>
            <div>
              <p>Do you have mad skills? Register to attend the full weekend and collaborate on projects.</p>
              <a href="<%= @event.hack_rsvp_url%>"><button>PARTICIPATE</button></a>
            </div>
          </div>
        </div>
      </div>
    <% else %>

    <% end%>
  </div>
</div>

